<Window x:Class="Aufgabe_14_Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--xmlns:models="clr-namespace:Aufgabe_14_Client.CustomerServiceProxy"-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <TextBox Margin="5" Width="400" Text="{Binding SearchingLastName}"/>
            <Button Margin="5" Width ="150" Content="Suchen!" Command="{Binding SearchCommand}"/>
        </StackPanel>
        <ListBox Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Models}" SelectedItem="{Binding SelectedModel}">
            <!--<ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:Customer}">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Text="Name:"/>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{} {0} {1}">
                                    <Binding Path="FirstName"/>
                                    <Binding Path="LastName"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>-->
        </ListBox>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
            <Button Content="Leeren" Width="150" Margin ="5" Command="{Binding EmptyCommand}"/>
            <Button Content="Laden" Width="150" Margin ="5" Command="{Binding LoadCommand}"/>
            <Button Content="Neu" Width="150" Margin="5" Command="{Binding AddCommand}"/>
            <Button Content="Löschen" Width="150" Margin ="5" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</Window>
