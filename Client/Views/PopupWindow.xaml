<Window x:Class="Baka.Hipster.Burger.Client.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Baka.Hipster.Burger.Client"
        mc:Ignorable="d"
        Title="Information" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Resources/ausrufezeichen.png" >
    <Grid Background="LightGray">
        <Label Content="!WARNING!" Foreground="#d94448" Margin="20" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Black"/>
        <TextBlock Text="{Binding PopupText}" Margin="30" FontSize="18" Width="Auto" Height="Auto" Foreground="#d94448" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" FontFamily="Great Vibes"/>
    </Grid>
</Window>